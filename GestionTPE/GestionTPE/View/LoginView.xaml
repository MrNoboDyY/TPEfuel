<Window x:Class="GestionTPE.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:GestionTPE.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="LoginView" Height="346" Width="492">
    <Window.DataContext>
        <viewModel:LoginViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="38" Margin="170,6,0,0" TextWrapping="Wrap" Text="{Binding loginModel.NumTpe,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="142"/>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="165,49,0,0" TextWrapping="Wrap" Text="{Binding loginModel.CodeSite,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="142"/>
        <Label Content="Numero TPE :" HorizontalAlignment="Left" Margin="83,16,0,0" VerticalAlignment="Top"/>
        <Label Content="Numero Site :" HorizontalAlignment="Left" Margin="83,58,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.211,-0.462"/>

        <Button Command="{Binding ConnectionCommand}" Content="Connexion" HorizontalAlignment="Left" Margin="352,16,0,0" VerticalAlignment="Top" Width="115" />
        <Button  Command="{Binding DisconnectCommand}" Content="Déconnexion" HorizontalAlignment="Left" Margin="352,71,0,0" VerticalAlignment="Top" Width="auto" />

        <!--<Button Command="{Binding TomcardViewCommand}" Content="TOMCARD" HorizontalAlignment="Left" Margin="107,250,0,0" VerticalAlignment="Top" Width="284"/>-->
        <Button  Command="{Binding LoyaltyViewCommand}" Content="ENTER LOYALTY / TOMCARD" HorizontalAlignment="Left" Margin="107,189,0,0" VerticalAlignment="Top" Width="284" Height="68" />
        <TextBox  Name="webserviceAddress" Text="{Binding loginModel.WebServiceAddress,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="30" Margin="111,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="284" IsEnabled="False"/>
        <Label Content="URL WebService" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" Width="auto"/>

    </Grid>
</Window>
