<Window x:Class="GestionTPE.View.LoyaltyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:viewModel="clr-namespace:GestionTPE.ViewModel"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoyaltyView" Height="366" Width="610" ResizeMode="NoResize">
    <Window.DataContext>
        <viewModel:LoyaltyViewModel/>
    </Window.DataContext>
    <TabControl HorizontalAlignment="Left" Height="338" VerticalAlignment="Top" Width="605">
        <TabItem Header="SOLDE POINT">
            <Grid Background="White" Margin="0,0,-7,-8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>
                <Grid HorizontalAlignment="Left" Height="auto" Margin="20,10,0,0" VerticalAlignment="Top" Width="auto"/>
                <Label Name="numerodecarteLabel" Content="NumCarte * :" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="1" />
                <TextBox Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="1" TextWrapping="Wrap" Text="{Binding LoyaltyModel.NumeroDeCarte,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Stretch" Background="LightBlue"/>
                <Label Name="historiquepointLabel" Content="HistoriquePoints" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="2" VerticalAlignment="Top"/>
                <TextBox IsEnabled="False" Background="LightBlue" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.ColumnSpan="2" Grid.Row="2" TextWrapping="Wrap" Text="{Binding LoyaltyModel.ReponseDecodee,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Stretch"/>
                <Button Command="{Binding SoldePointCommand }" Content="Valider" Grid.Column="3" HorizontalAlignment="Left" Margin="20,10,00,10" Grid.Row="1" VerticalAlignment="Stretch" Width="auto" Height="Auto" Background="Green"/>
                <Button Command="{Binding RetourAccueilCommand}" Content="Retour Accueil" Grid.Column="3" Margin="20,100,20,-85" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="1" RenderTransformOrigin="0.419,4.188" Height="36"/>
                <DataGrid Visibility="{Binding loyaltymodel.VisibiliteInformations}" Grid.ColumnSpan="2" Margin="0,0,0,-110" Grid.Row="3" />
                <Label Content="Solde Points" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="121"/>
                <Label Content="Au" HorizontalAlignment="Right" Height="35" Margin="0,61,19,-45" Grid.Row="3" VerticalAlignment="Top" Width="121"/>
                <Label Content="Statut" HorizontalAlignment="Left" Height="24" Margin="10,112,0,-85" Grid.Row="3" VerticalAlignment="Top" Width="121"/>
                <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" Grid.Row="3" TextWrapping="Wrap" Text="{Binding LoyaltyModel.PointCarte,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="126"/>
                <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="10,51,0,-44" Grid.Row="3" TextWrapping="Wrap" Text="{Binding Path=LoyaltyModel.DateCarte,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="126"/>
                <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="36" Margin="10,100,0,-85" Grid.Row="3" TextWrapping="Wrap" Text="{Binding LoyaltyModel.StatutCarte,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="126"/>

            </Grid>
        </TabItem>
        <TabItem Header="TOMCARD">
            <Grid Background="White" >
                <Grid HorizontalAlignment="Left" Height="auto" Margin="10,10,0,0" VerticalAlignment="Top" Width="auto"/>
                <Button Content="Validation" HorizontalAlignment="Left" Height="48" Margin="483,38,0,0" VerticalAlignment="Top" Width="102" Background="Green"/>
                <Button Content="Annulation" HorizontalAlignment="Left" Height="48" Margin="483,120,0,0" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.539,1.625" Background="Red"/>
                <Button Content="Retour Accueil" HorizontalAlignment="Left" Height="34" Margin="400,246,0,0" VerticalAlignment="Top" Width="185"/>


            </Grid>

        </TabItem>
    </TabControl>
</Window>
